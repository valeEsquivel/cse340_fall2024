<div id="login-main">
    <h2 id="subtitle">
        <%= title %>
    </h2>
    <%- messages() %>

        <div class="form-login">
            <form action="/account/login" method="post">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <div>
                        <input type="email" id="email" name="email" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <div>
                        <span class="pass-pattern">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
                    </div>
                    <div>
                        <input type="password" id="password" name="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                    </div>
                </div>
                <button type="submit" id="login-btn" title="Click to log-in">Login</button>
            </form>
            <p>No account? <a href="/account/register">Sign-up</a></p>
        </div>
</div>